<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/background_dark"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <ImageView
        android:src="@drawable/game_name_less"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/card_role_dispatcher"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/card_role_quarantinespecialist" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/card_role_medic" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/card_role_scientist" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:weightSum="4">

        <TextView android:id="@+id/player_one_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <TextView android:id="@+id/player_two_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <TextView android:id="@+id/player_three_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <TextView android:id="@+id/player_four_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</LinearLayout>